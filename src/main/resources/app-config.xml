<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


    <bean id="userService" class="ua.com.spring.core.test.service.impl.DefaultUserService">
    </bean>
    <bean id="eventService" class="ua.com.spring.core.test.service.impl.DefaultEventService">
    </bean>
    <bean id="discountService" class="ua.com.spring.core.test.service.impl.DefaultDiscountService">
    </bean>
    <bean id="bookingService" class="ua.com.spring.core.test.service.impl.DefaultBookingService">
    </bean>
<!--    <bean id="auditoriumService" class="ua.com.spring.core.test.service.impl.auditoriumServiceImpl">
    </bean>-->

    <bean id="redAuditorium" class="ua.com.spring.core.test.domain.Auditorium">
        <constructor-arg name="name" value="${auditorium.red.name}"/>
        <constructor-arg name="numberOfSeats" value="${auditorium.red.seats}"/>
        <constructor-arg name="vipSeats" value="${auditorium.red.vip}"/>
    </bean>
    <bean id="blueAuditorium" class="ua.com.spring.core.test.domain.Auditorium">
        <constructor-arg name="name" value="${auditorium.blue.name}"/>
        <constructor-arg name="numberOfSeats" value="${auditorium.blue.seats}"/>
        <constructor-arg name="vipSeats" value="${auditorium.blue.vip}"/>
    </bean>
    <bean id="greenAuditorium" class="ua.com.spring.core.test.domain.Auditorium">
        <constructor-arg name="name" value="${auditorium.green.name}"/>
        <constructor-arg name="numberOfSeats" value="${auditorium.green.seats}"/>
        <constructor-arg name="vipSeats" value="${auditorium.green.vip}"/>
    </bean>

    <bean id="defaultAuditoriumService" class="ua.com.spring.core.test.service.impl.DefaultAuditoriumService">
        <constructor-arg name="auditoriums">
            <list>
                <ref bean="redAuditorium"/>
                <ref bean="blueAuditorium"/>
                <ref bean="greenAuditorium"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="birthdayStrategy" class="ua.com.spring.core.test.service.impl.BirthdayStrategy">
    </bean>

    <bean id="every10thTicket" class="ua.com.spring.core.test.service.impl.Every10thTicketStrategy">
    </bean>

    <bean id="defaultDiscountService" class="ua.com.spring.core.test.service.impl.DiscountStrategy">
        <constructor-arg>
            <list>
                <ref bean="birthdayStrategy"/>
                <ref bean="every10thTicket"/>
            </list>
        </constructor-arg>
    </bean>

</beans>